!!! 5
%html{:lang => 'en'}
  %head
    <!-- Le HTML5 shim, for IE6-8 support of HTML elements -->
    <!--[if lt IE 9]>
    <script src="http://html5shim.googlecode.com/svn/trunk/html5.js"></script>
    <![endif]-->

    %meta{:name=>"csrf-token", :content=>"#{session[:csrf]}"}
    %meta{:name=>"csrf-param", :content=>"authenticity_token"}
    %meta{:content => 'text/html; charset=utf-8', 'http-equiv' => 'Content-Type'}
    %meta{:name => :viewport, :content => 'width=device-width,initial-scale=1'}
    %title= @title.present? ? "#{@title} | Padrino / Cloudinary" : "Padrino / Cloudinary"
    =favicon_tag 'favicon.ico'
    %link{:href => 'http://fonts.googleapis.com/css?family=Varela', :rel => :stylesheet}
    =stylesheet_link_tag 'bootstrap', 'application', 'main'

  %body
    .navbar.navbar-fixed-top
      .navbar-inner
        .container
          =link_to 'Padrino / Cloudinary', url(:base, :index), :class => 'navbar-brand', :title => 'Padrino / Cloudinary'

    .container.main
      .main-wrapper
        ={:error => 'danger', :warning => 'warning', :success => 'success', :notice => 'info'}.map { |type, class_name| flash_tag(type, :class => "alert alert-#{class_name} fade in", :bootstrap => true) }.join.html_safe
        .row=yield
        .main-wrapper-push

    %footer
      .footer-wrapper.container
        %p.pull-left
        %ul.pull-right.footer-links
          %li=link_to 'source code', 'https://github.com/fiestacasey/padrino_cloudinary_example', :class => 'footer-links-link', :target => :_blank
          %li 
            %span.footer-links-link='|'
          %li=link_to '@twitter', 'http://twitter.com/fiestacasey', :target => :_blank, :class => 'footer-links-link'


    =javascript_include_tag 'jquery-1.9.0.min', 'jquery-ujs', 'bootstrap.min', 'jquery.validate.min', 'additional-methods.min', 'jquery.ui.widget', 'jquery.iframe-transport','jquery.fileupload', 'main'
